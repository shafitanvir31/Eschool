<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Article Details</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 20px;
        }
        .article-container {
            margin-bottom: 20px;
        }
        .quiz-list {
            list-style: none;
            padding-left: 0;
        }
        .quiz-list li {
            margin-bottom: 10px;
        }
        .quiz-link {
            color: #007bff;
            text-decoration: none;
        }
        .quiz-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 id="articleTitle"><%= articleTitle %></h2>
            </div>
            <div class="col-12">
                <div class="article-container" id="articleContent"><%= articleContent %></div>
            </div>
            <div class="col-12">
                <h3>Quizzes</h3>
                <ul class="quiz-list">
                    <% quizs.forEach(function(quiz) { %>
                        <li>
                            <a href="/questions/<%= quiz.id %>?categoryId=<%= categoryId %>" class="quiz-link"><%= quiz.name %></a>
                        </li>
                    <% }); %>
                </ul>
            </div>
            <div class="col-12">
                <a href="/" class="btn btn-primary">Back to Homepage</a>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function() {
        });
    </script>
</body>
</html>
